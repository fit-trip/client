<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_schedule_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="20dp"
    >
    <LinearLayout
        android:id="@+id/item_detail_schedule_name_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_detail_schedule_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/one_150"
            />
        <TextView
            android:id="@+id/item_detail_location_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="13dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="장소 이름"
            android:textSize="24dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/item_detail_schedule_cost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="최소 금액"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/item_detail_schedule_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="최소 시간"
            android:textSize="12dp"
            />
    </LinearLayout>
</LinearLayout>