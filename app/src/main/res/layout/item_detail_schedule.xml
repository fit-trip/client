<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_schedule_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="15dp"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:background="@drawable/schedule_detail"
    >

    <LinearLayout
        android:id="@+id/item_detail_schedule_name_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/item_detail_schedule_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/one_150"
            />
        <TextView
            android:id="@+id/item_detail_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="장소 이름"
            android:textSize="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/item_detail_schedule_cost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="다음 비용"
            android:textSize="12dp"
            android:gravity=""
            />
        <TextView
            android:id="@+id/item_detail_schedule_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="직접 입력하신 장소"
            android:textSize="12dp"
            />
    </LinearLayout>

</LinearLayout>