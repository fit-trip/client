<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_schedule_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="20dp"
    >
    <LinearLayout
        android:id="@+id/item_schedule_name_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop ="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="일정 이름"
            android:textSize="24dp"
            />
        <TextView
            android:id="@+id/item_schedule_preview_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="일정"
            android:textSize="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/item_schedule_opt_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="최소 금액"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/item_schedule_opt_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="최소 시간"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/item_schedule_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="스케줄 생성 일자"
            android:textSize="12dp"
            />
    </LinearLayout>


</LinearLayout>